<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_03"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="140dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/magz"
        android:gravity="center"
        android:shadowColor="#FFFD47"
        android:shadowDx="10"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:text="Era Evolution"
        android:textAlignment="center"
        android:textColor="#03989E"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="165dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/era_01"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="548dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="133dp"
            android:layout_height="26dp"
            android:fontFamily="@font/magz"
            android:shadowColor="#03989E"
            android:shadowDx="10"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="plant one"
            android:textAlignment="center"
            android:textColor="#FFFD47"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="165dp"
        android:layout_marginStart="204dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/era_03"
            android:enabled="false"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="338dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="147dp"
            android:layout_height="26dp"
            android:fontFamily="@font/magz"
            android:shadowColor="#03989E"
            android:shadowDx="10"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="plant three"
            android:textAlignment="center"
            android:textColor="#FFFD47"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="165dp"
        android:layout_marginStart="196dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/era_02"
            android:enabled="false"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="489dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="144dp"
            android:layout_height="28dp"
            android:fontFamily="@font/magz"
            android:shadowColor="#03989E"
            android:shadowDx="10"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="plant four"
            android:textAlignment="center"
            android:textColor="#FFFD47"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="173dp"
        android:layout_height="165dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:background="@drawable/era_04"
            android:enabled="false"
            tools:layout_editor_absoluteX="254dp"
            tools:layout_editor_absoluteY="242dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="133dp"
            android:layout_height="26dp"
            android:fontFamily="@font/magz"
            android:shadowColor="#03989E"
            android:shadowDx="10"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="plant two"
            android:textAlignment="center"
            android:textColor="#FFFD47"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton4" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/setting_icon"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="260dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:rotation="-167"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rocket"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
